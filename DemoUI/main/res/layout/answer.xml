<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="8"
    android:orientation="vertical">

        <LinearLayout
            android:id="@+id/answer_1"
            style="@style/layout_answer">
            <LinearLayout
                style="@style/layout_answer_index">
                <TextView
                    android:id="@+id/answer_num_1"
                    style="@style/layout_text_index"
                    android:text="1"
                    />
            </LinearLayout>
            <LinearLayout
                style="@style/layout_answer_content">
                <TextView
                    style="@style/text_answer_content"
                    android:text="@string/a" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/answer_2"
            style="@style/layout_answer">
            <LinearLayout
                style="@style/layout_answer_index">
                <TextView
                    android:id="@+id/answer_num_2"
                    style="@style/layout_text_index"
                    android:text="2"
                    />
            </LinearLayout>
            <LinearLayout
                style="@style/layout_answer_content">
                <TextView
                    android:id="@+id/answer_num_3"
                    style="@style/text_answer_content"
                    android:text="@string/a" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/answer_3"
            style="@style/layout_answer">
            <LinearLayout
                style="@style/layout_answer_index">
                <TextView
                    style="@style/layout_text_index"
                    android:text="3"
                    />
            </LinearLayout>
            <LinearLayout
                style="@style/layout_answer_content">
                <TextView
                    style="@style/text_answer_content"
                    android:text="@string/a" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/answer_4"
            style="@style/layout_answer">
            <LinearLayout
                style="@style/layout_answer_index">
                <TextView
                    android:id="@+id/answer_num_4"
                    style="@style/layout_text_index"
                    android:text="4"
                    />
            </LinearLayout>
            <LinearLayout
                style="@style/layout_answer_content">
                <TextView
                    style="@style/text_answer_content"
                    android:text="@string/a" />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>